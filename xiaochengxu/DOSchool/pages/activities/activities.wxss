/* pages/activities/activities.wxss */

/*每一行*/

.tr {
  display: flex;
  width: 742rpx;
  justify-content: center;
  height: 98rpx;
  align-items: center;
  border-top-width: 6rpx;
  border-right-width: 6rpx;
  border-bottom-width: 0;
  border-left-width: 6rpx;
  border-style: solid;
  border-color: #B7B7B7;
}

.trweekand {
  display: flex;
  width: 742rpx;
  justify-content: center;
  height: 294rpx;
  align-items: center;
  border-top-width: 6rpx;
  border-right-width: 6rpx;
  border-bottom-width: 0;
  border-left-width: 6rpx;
  border-style: solid;
  border-color: #B7B7B7;
}

/*用于设置偶数行的背景色*/

.bg-g {
  background: #e6f3f9;
}

/*单元格*/

.tdleft {
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 2rpx solid #B7B7B7;
}
.tdleft > text {
  color:#00A6F6; 
  font-size: 40rpx;
}
.tdleft .datef {
  color:#aaaaaa;
  font-size: 30rpx;
  
  margin-top: 10rpx;
}

.tdright {
  width: 75%;
  display: flex;
  align-items: center;
}
.tdright .content {
  width: 350rpx;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  font-family: 楷体;
}
.tdright .count {
  width: 130rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tdright .count image {
  height: 50rpx;
  width: 50rpx;
}
.tdright .count .suffix {
  color: grey;
  font-size: 25rpx;
}
.tdright .check{
  width: 100rpx;
  display: flex;
  justify-content: flex-end;
}
.tdright .check icon{
  margin: 15rpx;
}

.tdweekand {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.tdweekand view {
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  text-align: left;
  border-bottom: 2rpx solid #B7B7B7;
}

image {
  height: 50rpx;
  width: 50rpx;
  margin: 20rpx;
}

